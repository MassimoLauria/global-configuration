[general]
accounts = GMail

metadata = %(basemaildir)s/offlineimap-metadata/
pythonfile = %(baseconfdir)s/offlineimap_helper.py

maxsyncaccounts = 1

# This setting does not work with older versions of offlineimap. I do
# not have such versions hanging around, but it is quite possible that
# some distro still have it.
ui = basic

[Account GMail]
localrepository = Local
remoterepository = Remote
autorefresh = 5
quick = 10
postsynchook=notmuch new

[Repository Local]
type = Maildir
localfolders = %(basemaildir)s/gmail-mirror/

[Repository Remote]
type = Gmail
remoteuser = lauria.massimo@gmail.com
remotepasseval = get_password("imap.gmail.com","lauria.massimo@gmail.com")
keepalive = 60
maxconnections = 1
realdelete = no
# Setting for Italian folder names
trashfolder = [Gmail]/Cestino
spamfolder = [Gmail]/Spam
# trashfolder = [Gmail]/Trash
# spamfolder = [Gmail]/Spam

# Mutt helper
[mbnames]
enabled = yes
filename = %(basemaildir)s/mutt-mailboxes
header = "mailboxes "
peritem = "=%(foldername)s"
sep = " "
footer = "\n"

[DEFAULT]
basemaildir = ~/personal/mail
baseconfdir = ~/config/mail
