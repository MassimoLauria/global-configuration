" Pentadactyl configuration   -*- vimrc -*-


" Uncomment next line to make setting volatile, so that they are
" always back to default when the rc file is read.
"sanitise tridactyllocal tridactylsync


" Eternal applications
set editorcmd emacsclient -c
set browser firefox --new-tab

" Basic
bind <A-x> fillcmdline
bind <Space> fillcmdline

" Setup basic movement keys
unbind h
unbind j
unbind k
unbind l
unbind u
unbind o
bind k	scrollline 10
bind i	scrollline -10
bind K	scrollline 50
bind I	scrollline -50
bind o	tabnext
bind u	tabprev
bind G	scrollto 0
bind H	scrollto 100

bind J	back
bind L	forward

" Open close tabs
unbind d
unbind t
unbind T
bind tt fillcmdline tabopen
bind e  composite get_current_url | fillcmdline_notrail open
bind dd tabclose
bind rr undo

unbind p
unbind P
bind p clipboard tabopen


" Zoom
unbind zi
unbind zo
bind - zoom -0.1 true
bind + zoom  0.1 true
bind = zoom  0.1 true
bind 0 zoom  1.0 false





" Search
unbind s 
unbind S 
bind s fillcmdline tabopen search

" Gui
set theme default
guiset gui none
guiset navbar none
