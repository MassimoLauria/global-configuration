\xdef\tkz@init@ystep{1}
\xdef\tkz@init@xmin{0}
\xdef\tkz@init@ymin{0}
\xdef\tkz@init@xmax{10}
\xdef\tkz@init@ymax{10}
\xdef\tkz@init@xdec{1}
\xdef\tkz@init@ydec{1}     

